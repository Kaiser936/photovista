{% extends 'base.html.twig' %}

{% block title %}Modifier mon profil{% endblock %}

{% block body %}
<div class="container-inscription">

    <div>
        <button class="btn btn-primary mt-4">
            <a href="{{ path('app_profil') }}" class="text-white"><i class="fa-solid fa-left-long"> Retour</i>
            </a>
        </button>
    </div>
    <h1>Modifier mon profil</h1>    
    
    {{ form_start(form) }}
    
    {{ form_row(form.email, {'attr': {'class': 'form-control form-control mb-3'}}) }}
    {{ form_row(form.password, {'attr': {'class': 'form-control form-control mb-3'}}) }}
    {{ form_row(form.pseudo, {'attr': {'class': 'form-control form-control mb-3'}}) }}
    {{ form_row(form.biographie, {'attr': {'class': 'form-control form-control mb-3'}}) }}
    <button type="submit" class="btn btn-warning form-control mb-3">Valider</button>


</div>


{% endblock %}
