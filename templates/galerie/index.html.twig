{% extends 'base.html.twig' %}

{% block title %}Galerie{% endblock %}

{% block body %}
<div class="container">
    <h1 class="text-center">Discover</h1>

    <div class="row">
        {% for galleryPost in post %}
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <a href="#" data-bs-toggle="modal" data-bs-target="#exampleModal{{ galleryPost.id }}">
                    <img src="{{ asset('uploads/' ~ galleryPost.picture) }}" class="card-img-top custom-img-size" alt="{{ galleryPost.title }}">
                </a>
            </div>
        {% endfor %}
    </div>

    {% for modalPost in post %}
        <!-- Modal -->
        <div class="modal fade" id="exampleModal{{ modalPost.id }}" tabindex="-1" aria-labelledby="exampleModalLabel{{ modalPost.id }}" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="postModalLabel{{ modalPost.id }}">{{ modalPost.title }}</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <img src="{{ asset('uploads/' ~ modalPost.picture) }}" class="img-fluid" alt="{{ modalPost.title }}">
                    </div>
                    <div class="col-md-6">
                        <p class="hidden-date">{{ modalPost.createdAt|date("U") }}</p>

                        <a href="#" class="circle-link"><i class="fa-solid fa-heart"></i></a>

                        <div class="form-group d-flex">
                            <textarea class="form-control" id="comment{{ modalPost.id }}" rows="1" placeholder="Commentez"></textarea>
                            <button type="submit" class="btn btn-primary ml-2">Envoyer</button>
                        </div>
                
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

    {% endfor %}
</div>

{% endblock %}
