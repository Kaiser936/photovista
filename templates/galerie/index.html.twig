{% extends 'base.html.twig' %}

{% block title %}Photovista | Galerie{% endblock %}

{% block body %}
<div class="container">
    <h1 class="text-center">Discover</h1>

    <div class="row">
        {% for galleryPost in posts %}
        <div class="col-lg-3 col-md-4 col-sm-6 mb-4 text-center">
        <a href="{{ path('app_single_post', {'id': galleryPost.id}) }}">
            <img src="{{ asset('uploads/' ~ galleryPost.picture) }}" class="card-img-top custom-img-size" alt="{{ galleryPost.title }}" style="object-fit: cover;">
        </a>
    </div>    
        {% endfor %}
    </div>
</div>
{% endblock %}
