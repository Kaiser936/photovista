{% extends 'base.html.twig' %}

{% block title %}Mon profil{% endblock %}

{% block body %}
    <div class="container">

    {% if user is not null %}
    <h1 class="text-center">Profil de {{ user.pseudo }}</h1>
    {% endif %}


    {% if 'ROLE_ADMIN' in user.roles %}
    <!-- Code à exécuter si l'utilisateur a le rôle "ROLE_ADMIN" -->
    <a href="#">Gérer les utilisateurs</a><br/>
    <a href="#">Gérer les publications</a><br/>
    {% endif %}

    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
    <div class="container bootstrap snippets bootdey">
    <div class="row">
        <div class="profile-nav col-md-3">
            <div class="panel">
                <div class="user-heading round">
                    {# <a href="#">
                        <img src="https://bootdey.com/img/Content/avatar/avatar3.png" alt="">
                    </a> #}
                    <h1>{{user.pseudo}}</h1>
                    <p>{{user.email}}</p>
                </div>
        
                <ul class="nav nav-pills nav-stacked">
                    <li class="active"><a href="{{path('app_profil')}}"> <i class="fa fa-user"></i> Profile</a></li>
                    {# <li><a href="#"> <i class="fa fa-calendar"></i> Recent Activity <span class="label label-warning pull-right r-activity">9</span></a></li> #}
                    <li><a href="{{path('app_edit_profil', {'id': user.id})}}"> <i class="fa fa-edit"></i> Edit profile</a></li>
                </ul>
            </div>
        </div>
        <div class="profile-info col-md-9">
            <div class="panel">
                <div class="bio-graph-heading">
                    {{user.biographie}}
                </div>
                <div class="panel-body bio-graph-info">
                    <h1>Bio Graph</h1>
                    <div class="row">
                        <div class="bio-row">
                            <p><span>Pseudo :<input type="text" value="{{user.pseudo}}"></span></p>
                        </div>
                        <div class="bio-row">
                            <p><span>Email :<input type="email" value="{{user.email}}"></span></p>
                        </div>
                        <div class="bio-row">
                            <p><span>Password :<input type="password" value="{{user.password}}"></span></p>
                        </div>
                        <div class="bio-row">
                            <p><span>Biographie :<input type="textarea" value="{{user.biographie}}"></span></p>
                        </div>
                    </div>
                </div>
            </div>
            <div>
            </div>
        </div>
    </div>
    </div>

{% endblock %}