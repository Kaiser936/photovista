{% extends 'base.html.twig' %}

{% block title %}Gérer ma publication{% endblock %}

{% block body %}
<div class="container">
    <h1>Gérer ma Publication</h1>
    <div class="card w-100 border-0 bg-white shadow-xs p-0 mb-4">
        <div class="card-body p-lg-5 p-4 w-100 border-0">
            <div class="row">
                <!-- Image à gauche -->
                <div class="col-md-4">
                    <img src="{{ asset('uploads/' ~ post.picture) }}" class="w-75" alt="{{post.description}}">
                </div>
                <!-- Titre et description à droite -->
                <div class="col-md-6">
                    <h5 class="card-title">{{post.title}}</h5>
                    <p class="card-text">{{post.description}}</p>
                    <!-- Boutons à droite -->
                    <div class="text-right">
                    {% if app.user and app.user == post.created_by %}
                        <a href="{{ path('app_edit_post', {'id': post.id}) }}" class="btn btn-primary"><i class="fa-solid fa-pen-to-square"></i></a>
                        <a class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#suppression"><i class="fa-solid fa-trash-can"></i></a>
                    {% endif %}
                        <a href="javascript:history.back()" class="btn btn-secondary"> <i class="fa-solid fa-arrow-left"></i>Retour</a>
                        <a href="#" data-bs-target="#commentaireModal" data-bs-toggle="modal"class="btn btn-secondary"> <i class="fa-solid fa-arrow-left"></i>Commenter</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal de suppression-->
    <div class="modal fade" id="suppression" tabindex="-1" aria-labelledby="suppressionLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title fs-5">Suppression</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    {% include 'AppBundle:Commentaire:comment_form.html.twig' with {'form': form} %}
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Non</button>
                    <a href="{{path('app_single_post_remove',{id:post.id})}}" type="button" class="btn btn-primary">Oui</a>
                </div>
            </div>
        </div>
    </div>

    {# Modal de commentaire #}
    <div class="modal fade" id="commentaireModal" tabindex="-2" aria-labelledby="commentaireModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title fs-5">Commentaire</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    {{ form_start(commentForm) }}
                    {{ form_widget(commentForm.texte) }}
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                    <button type="submit" class="btn btn-primary">Envoyer</button>
                    {{ form_end(commentForm) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
