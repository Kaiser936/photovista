{# header.html.twig #}
<header>
<div class="container">
<nav class="navbar navbar-expand-lg custom-navbar">
    <div class="container-fluid">
        <a class="navbar-brand" href="{{ path('app_home') }}">
        <div class="d-flex align-items-center">
            <img src="{{ asset('images/logo.png') }}" alt="Logo" class="logo">
            <p class="logo-title mb-0">PHOTOVISTA</p>
        </div>
        </a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" href="{{ path('app_home') }}" title="Home">
                <i class="fa-solid fa-house"> </i> Accueil
            </a>
        </li>
        {% if is_granted('ROLE_USER') %}
            <li class="nav-item">
                <a class="nav-link" href="{{ path('app_profil') }}" title="Profil">
                    <i class="fa-solid fa-user"></i> Mon Profil
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{path ('app_galerie')}}" title="Galerie">
                    <i class="fa-solid fa-globe"></i> Galerie
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('app_add_post') }}" title="Nouvelle publication">
                        <i class="fa-solid fa-circle-plus"></i> Nouvelle publication
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('app_logout') }}" title="Déconnexion">
                        <i class="fa-regular fa-circle-xmark"></i> Déconnexion
                </a>
            </li>
        {% else %}
            <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_login') }}" title="Login">
                        <span class="circle-link">
                            <i class="fa-regular fa-user"></i>
                        </span>
                    </a>
            </li>
        {% endif %}
    </ul>
</div>

    </div>
</nav>
</div>
</header>